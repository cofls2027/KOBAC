<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.KOBAC_app" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@android:color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an            animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/knot</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.KOBAC_app</item>
    </style>
</resources>
